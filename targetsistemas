1)
def sequencia_fibonacci(numero):
    sequencia = [0, 1]
    while sequencia[-1] < numero:
        proximo_valor = sequencia[-1] + sequencia[-2]
        sequencia.append(proximo_valor)
    return sequencia


def eh_fibonacci(numero):
    sequencia = sequencia_fibonacci(numero)
    if numero in sequencia:
        return f'{numero} pertence a sequencia de fibonacci'
    else:
        return f'{numero} nao pertence a sequencia de fibonacci'


numero_teste = int(input("Insira um número: "))
res = eh_fibonacci(numero_teste)
print(res)

